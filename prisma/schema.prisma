generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  // provider = "mysql"
  url      = env("DATABASE_URL")
}

// User Model for mongo db atlas
model user {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String
  phoneNumber String
  password    String
  gender      String
  avatar      String
  bio         String
  dob         DateTime?
}

